<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/jquery/jquery.js"></script>
    <link href="~/twitter-bootstrap/css/bootstrap.css"  rel="stylesheet"/>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Bıdıbıdı.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Member">Üye Ana Sayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
               <div class="col-md-3 d-grid gap-2 mx-auto h-100 ">
                <h3>Menü</h3>

                <a class="btn btn-danger btn-block" asp-action="Claims" asp-controller="Admin">üye claims</a>

                <a class="btn btn-danger btn-block" asp-action="Users" asp-controller="Admin">Üyeler</a>

                <a class="btn btn-danger btn-block" asp-action="Roles" asp-controller="Admin">Roller</a>

                <a class="btn btn-danger btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış yap</a>
            </div>
        </div>
    </div>
</body>
</html>